<div class="field">
  <%= form.label :tag_ids, "Tags" %><br>
  <% Tag.all.each do |tag| %>
    <%= check_box_tag "post[tag_ids][]", tag.id, @post.tags.include?(tag) %>
    <%= tag.name %><br>
  <% end %>
</div>

