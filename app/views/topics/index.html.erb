<h1 style="text-align: center;">Topics</h1>
<%= stylesheet_link_tag 'buttonStyle', media: 'all', 'data-turbolinks-track': 'reload' %>
<table style="margin: 0 auto; width: 80%; border-collapse: collapse; text-align: center;">
  <thead>
  <tr>
    <th style="background-color: #007bff; color: #fff; padding: 10px;">Topic Name</th>
  </tr>
  </thead>
  <tbody>
  <% @topics.each do |topic| %>
    <tr>
      <td style="border: 1px solid #ddd; padding: 10px;">
        <%= link_to topic.name, topic, style: "text-decoration: none; color: #333; font-weight: bold;" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<br><br>
<p style="text-align: center;">
  <%= link_to "New topic", new_topic_path, style: "text-decoration: none; font-weight: bold; background-color: #007bff; color: #fff; padding: 10px 20px; border: none; border-radius: 5px;" %>
</p>


<br><br>
<div class="btn-toolbar" role="toolbar" aria-label="Post Actions">
  <div class="btn-group mr-2" role="group">
<center>
    <%= link_to "Back to articles", articles_path, class: "custom-btn black-btn" %>
</center>
  </div>
</div>
