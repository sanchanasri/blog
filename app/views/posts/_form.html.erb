<%= form_with(model: [@topic, @post] , local:false) do |form| %>

  <div class="errors"></div>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter name" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter description" %>
  </div>

  <%= render 'tags/new', form: form, post: @post %>


  <div>
  <%= form.label :image %>
  <%= form.file_field :image %>
</div><br><br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>
