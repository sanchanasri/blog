<table style="margin: 0 auto; width: 80%; border-collapse: collapse; text-align: center;">
  <thead>
  <tr>
    <th style="background-color: #007bff; color: #fff; padding: 10px;">Posts</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td style="border: 1px solid #ddd; padding: 10px;">
        <%= link_to post.name, post, style: "text-decoration: none; color: #333; font-weight: bold;" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table><br><br>
<p style="text-align: center;">
  <%= link_to "Back", root_path, style: "text-decoration: none; font-weight: bold; background-color: #007bff; color: #fff; padding: 10px 20px; border: none; border-radius: 5px;" %>
</p>