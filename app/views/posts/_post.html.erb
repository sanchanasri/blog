<div id="<%= dom_id post %>">
  <p>
    <strong>Name:</strong>
    <%= post.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Created by:</strong>
    <%= post.user.email %>
  </p>
  <p>
    <strong>Created at:</strong>
    <%= post.created_at.to_date %>
  </p>


</div>
